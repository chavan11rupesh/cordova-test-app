<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*"/>
         <splash src="res/screen/android/appicon.png" density="land-hdpi"/>
    <splash src="res/screen/android/appicon.png" density="land-ldpi"/>
    <splash src="res/screen/android/appicon3.png" density="land-mdpi"/>
    <splash src="res/screen/android/appicon4.png" density="land-xhdpi"/>

    <splash src="res/screen/android/appicon11.png" density="port-hdpi"/>
    <splash src="res/screen/android/appicon11.png" density="port-ldpi"/>
    <splash src="res/screen/android/appicon13.png" density="port-mdpi"/>
    <splash src="res/screen/android/appicon14.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0"/>
    <preference name = "AutoHideSplashScreen" value = "true"/>
    <preference name = "SplashScreenDelay" value = "5000"/>
</widget>
